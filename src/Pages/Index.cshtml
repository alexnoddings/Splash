@page
@using Splash.Pages
@using Splash.Data
@model IndexModel
@inject Info Info

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Info.Title</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@800&display=swap" rel="stylesheet" crossorigin="anonymous"> 
    <link rel="stylesheet" href="~/css/reboot.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<div class="center">
    <img width="96" height="96" src="img/header.png" />
    <div class="body">
        <h1 id="header">@Info.Title</h1>
        @if (Info.Body is not null)
        {
            <p id="content">@Info.Body</p>
        }
        <ul class="links">
            @foreach (Link link in Info.Links)
            {
                <li>
                    <a href="@link.Href" target="_blank" title="@link.Text">
                        @link.Text
                    </a>
                </li>
            }
        </ul>
    </div>
    <img width="96" height="96" src="img/footer.png" />
</div>
</body>
</html>
